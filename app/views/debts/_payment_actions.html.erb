<h2>Agregar pago</h2>
<%= form_for [@debt, Payment.new]  do |f| %>
  <%= f.label :amount, class: "control-label" %>
  <%= f.text_field :amount, class: "form-control" %>

  <%= f.submit "Crear pago", class: "btn btn-primary" %>
<% end %>

